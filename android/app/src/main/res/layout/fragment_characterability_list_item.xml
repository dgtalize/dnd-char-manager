<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/abilityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAllCaps="true"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="XXX" />

    <EditText
        android:id="@+id/scoreEditText"
        style="@style/PointsInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ems="3"
        android:hint="@string/score"
        android:inputType="number|numberSigned"
        android:selectAllOnFocus="true"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/modifierTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/text_margin"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="+99" />

    <EditText
        android:id="@+id/temporaryScoreEditText"
        style="@style/PointsInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ems="3"
        android:hint="@string/temporary_score"
        android:inputType="number|numberSigned"
        android:selectAllOnFocus="true"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/activeModifierTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_margin="@dimen/text_margin"
        android:textAlignment="textEnd"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        tools:text="+99" />

</LinearLayout>
